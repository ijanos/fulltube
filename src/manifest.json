{
  "name": "FullTube",
  "version": "1.0",
  "description": "Enlarge YouTube videos to fill the whole tab.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action" :
  {
    "default_icon" : "icon-128.png",
    "default_title" : "Enlarge video"
  },
  "permissions" : [
    "declarativeContent",
    "activeTab"
  ],
  "icons" : {
    "128" : "icon-128.png"
  },
  "manifest_version": 2
}
